{{!
    @template local_placeholders/timetable

    Timetables for class

    Example context (json):
    {
        "classes": [{
            "start": "2024-09-01 10:20",
            "end": "2024-09-01 11:20",
            "location": "Rm 121"
        }],
        "stuff": "Extra info"
    }
}}
<table class="table table-striped">
    <tr>
        <th>When</th>
        <th>Where</th>
    </tr>
    {{#classes}}
    <tr>
        <td>{{start}} - {{end}}</td>
        <td>{{location}}</td>
    </tr>
    {{/classes}}
</table>

<p>{{stuff}}</p>