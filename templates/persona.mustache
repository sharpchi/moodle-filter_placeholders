{{!
    @template local_placeholders/persona

    Table of contents for persona

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "title": "Title displayed",
        "people": [{
            "name": "John Smith",
            "photo": "Photo url and link",
            "email": "john.smith@example.com",
            "haschat": true,
            "chat": {
                "content": "Chat with John Smith on Teams",
                "icon": "fa-comments",
                "url": "https://teams.microsoft.com/l/chat/0/0?users=john.smith@example.com"
            },
            "link": {
                "content": "http://www.example.com",
                "icon": "fa-globe",
                "url": "http://www.example.com"
            },
            "hasphone": "true",
            "phone": [{
                "content": "Call John Smith on the phone",
                "icon": "fa-phone",
                "url": "555-5555"
            }],
            "hasipphone": "true",
            "ipphone": [{
                "content": "Call John Smith on the Teams",
                "icon": "fa-headphones",
                "url": "https://teams.microsoft.com/l/call/0/0?users=john.smith@example.com"
            }],
            "profilefields": [{
                "content": "johnsmith",
                "icon": "fa-linkedin",
                "url": "https://linkedin.com/in/johnsmith"
            }]
        }]
    }
}}
{{#title}}<h3>{{.}}</h3>{{/title}}
{{#people}}
<div class="table-responsive">
    <table class="table table-striped table-sm placeholders_persona">
        <caption>{{name}} {{{photo}}}</caption>
        <tr>
            <th scope="row">{{#str}}contact, local_placeholders{{/str}}</th>
            <td>
            <i class="fa fa-envelope" aria-hidden="true"></i> <a href="mailto:{{email}}" title="{{#str}}contactemail, local_placeholders, {{name}}{{/str}}">{{email}}</a>
            {{#haschat}}
                {{#chat}}
                <i class="fa {{icon}}" aria-hidden="true"></i>
                <a href="{{url}}">{{content}}</a><br />
                {{/chat}}
            {{/haschat}}
            </td>
        </tr>
        {{#link}}
        <tr>
            <th scope="row">{{#str}}website, local_placeholders{{/str}}</th>
            <td>
                {{#icon}}
                <i class="fa {{icon}}" aria-hidden="true"></i>
                {{/icon}}
                <a href="{{{url}}}">{{{content}}}</a>
            </td>
        </tr>
        {{/link}}
        {{#hasphone}}
        <tr>
            <th scope="row">{{#str}}phone, local_placeholders{{/str}}</th>
            <td>
                {{#phone}}
                    {{#icon}}
                    <i class="fa {{icon}}" aria-hidden="true"></i>
                    {{/icon}}
                    <a href="{{{url}}}">{{{content}}}</a>
                {{/phone}}
            </td>
        </tr>
        {{/hasphone}}
        {{#hasipphone}}
        <tr>
            <th scope="row">{{#str}}ipphone, local_placeholders{{/str}}</th>
            <td>
                {{#ipphone}}
                    {{#icon}}
                    <i class="fa {{.}}" aria-hidden="true"></i>
                    {{/icon}}
                    <a href="{{{url}}}">{{{content}}}</a>
                {{/ipphone}}
            </td>
        </tr>
        {{/hasipphone}}
        {{#profilefields}}
        <tr>
            <th scope="row">{{label}}</th>
            <td>
                {{#icon}}
                <i class="fa {{.}}" aria-hidden="true"></i>
                {{/icon}}
                {{#url}}
                <a href="{{{.}}}">
                {{/url}}
                {{{content}}}
                {{#url}}
                </a>
                {{/url}}
            </td>
        </tr>
        {{/profilefields}}
    </table>
</div>
{{/people}}